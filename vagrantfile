BOX_IMAGE = "ubuntu/xenial64"
Vagrant.configure("2") do |config|
        config.vm.define "sergenode" do |subconfig|
	        subconfig.vm.box = BOX_IMAGE
          subconfig.vm.network :private_network, ip: "10.0.0.100"
          subconfig.vm.hostname = "sergenode"
	        subconfig.vm.provider :virtualbox do |vb|
		        vb.customize ["modifyvm", :id, "--memory", "1024"]
		        vb.customize ["modifyvm", :id, "--cpus", "2"]
		        vb.customize ["modifyvm", :id, "--hwvirtex", "on"]
		        vb.customize ["modifyvm", :id, "--nestedpaging", "on"]
	            vb.customize ["modifyvm", :id, "--nictype1", "virtio"]
	            vb.name = "sergenode"
	        end

            #subconfig.vm.provision :shell, inline: "sudo apt-get update -y && sudo apt-get install -y software-properties-common && sudo apt-add-repository ppa:ansible/ansible && sudo apt-get update && sudo apt-get install -y ansible apt-transport-https"
          subconfig.vm.provision "shell", path: "install.sh"
  	end
end
